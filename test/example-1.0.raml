#%RAML 1.0
title: New API
version: v1
baseUri: http://api.samplehost.com

types:
  TestType:
    type: object
    properties:
      id: number
      optional?: string
      expanded:
        type: object
        properties:
          count: number

/helloWorld:
  description: |
    Test hello world
    description
  get:
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message" : "Hello World"
              }
  post:
    body:
      application/json:
        type: TestType
        properties:
          closure?:
            type: boolean
